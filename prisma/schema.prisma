datasource db {
  provider = "postgresql"

  url      = "postgresql://postgres:changeme@localhost:5432/starwars"
}

generator prisma_client_js {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

model UserDetails {
  id        String  @id @default(cuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  firstName String?
  lastName  String?
}

model User {
  id        String       @id @default(cuid())
  username  String       @unique
  password  String
  details   UserDetails?
  inventory Item[]       @relation("inventory")
  money     Int
  cart      Item[]       @relation("cart")
}

model Item {
  id              String     @id @default(cuid())
  saberPartId     String?
  SaberPart       SaberPart? @relation(fields: [saberPartId], references: [id])
  partNameId      String?
  PartName        PartName?  @relation(fields: [partNameId], references: [id])
  partDescription String?
  price           Int?
  User            User?      @relation("inventory", fields: [userId], references: [id])
  userId          String?
  carts           User[]     @relation("cart")
}

model SaberPart {
  id    String     @id @default(cuid())
  name  String
  part  PartName[]
  Items Item[]
}

model PartName {
  id          String     @id @default(cuid())
  name        String
  SaberPart   SaberPart? @relation(fields: [saberPartId], references: [id])
  saberPartId String?
  Items       Item[]
}
