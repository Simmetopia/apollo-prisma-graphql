datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator prisma_client_js {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

model UserDetails {
  id        String  @id @default(cuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  firstName String?
  lastName  String?
}

model User {
  id        String       @id @default(cuid())
  username  String       @unique
  details   UserDetails?
  inventory Item[]
  money     Int
}

model Item {
  id              String  @id @default(cuid())
  saberPart       String
  partName        String
  partDescription String?
  price           Float?
  inShop          Boolean?
  url             String?
  User            User?   @relation(fields: [userId], references: [id])
  userId          String?
  rarity          String?
}
